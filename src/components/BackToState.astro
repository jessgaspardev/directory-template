---
interface Props {
  state: string;
  stateSlug: string;
  className?: string;
}

const { state, stateSlug, className = "" } = Astro.props;

// Simple solution: just use the slug as provided
const cleanStateSlug = stateSlug.toLowerCase();
---

<div class="mt-8 text-center">
  <a 
    href={`/states/${cleanStateSlug}`} 
    class={`text-green-600 hover:text-green-800 bg-white px-4 py-3 rounded-md transition-colors ${className}`}
  >
    Back to {state} Cities
  </a>
</div>